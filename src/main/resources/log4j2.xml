<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <properties>
        <property name="baseDir">logs</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
        </Console>
        <RollingFile name="RollingFile" fileName="${baseDir}/applog.log"
                     filePattern="${baseDir}/applog-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10">
            <Delete basePath="${baseDir}" maxDepth="2">
                <IfFileName glob="*/applog*.log">
                    <IfLastModified age="10d">
                        <IfAny>
                            <IfAccumulatedFileSize exceeds="2 GB"/>
                        </IfAny>
                    </IfLastModified>
                </IfFileName>
            </Delete>
            </DefaultRolloverStrategy>

        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <!-- Hide Apache HTTP Library Printouts. All essential info is printed by utilities. -->
        <Logger name="org.apache.http" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>
